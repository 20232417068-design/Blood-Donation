<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blood Donation</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" />

    <style>
        /* --- Sticky Footer Fix --- */
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .content-wrapper {
            flex: 1;
        }

        /* --- Navbar --- */
        .navbar-custom {
            background-color: #d32f2f;
        }

        .navbar-brand,
        .nav-link,
        .navbar-brand:hover,
        .nav-link:hover {
            color: white !important;
            font-weight: 600;
        }

        /* --- Banner --- */
        .banner {
            width: 100%;
            height: 120px; /* reduced top empty space */
            background-image: url('/images/bloodlogo.jpg');
            background-size: cover;
            background-position: center;
            margin-bottom: 10px;
        }

        /* --- Footer --- */
        .footer {
            background: #d32f2f;
            color: white;
            padding: 15px;
            text-align: center;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">

            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/images/bloodlogo.jpg" width="80" class="me-2" />
                <h2><span>Blood Donation</span></h2>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon bg-light"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Donors/Create">Donate</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Requests" asp-action="Index">Requests</a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Camp">Camps</a>
                    </li>


                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Login">Admin</a>
                    </li>

                </ul>
            </div>

        </div>
    </nav>

    <!-- Banner -->
    <div class="banner"></div>

    <!-- Main Content Wrapper -->
    <div class="content-wrapper">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        © @DateTime.Now.Year Blood Donation System • Save Lives Donate Blood
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
